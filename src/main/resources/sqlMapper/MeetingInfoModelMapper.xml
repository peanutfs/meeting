        values ( #{meetingTitle,jdbcType=VARCHAR}, #{startTime,jdbcType=TIMESTAMP}, #{endTime,jdbcType=TIMESTAMP},
        #{checkInLocation, jdbcType=VARCHAR}, #{checkInRange, jdbcType=VARCHAR}, #{isNeedRegister, jdbcType=VARCHAR},
